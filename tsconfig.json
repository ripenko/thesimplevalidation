{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "traceResolution": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "lib": ["es2021"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/__tests__"]
}
